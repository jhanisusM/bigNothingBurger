<div class="containter">
  <br>
  <br>
  <br>
  <div class="transbox">
    <br>
    {{!-- picture row --}}
    <div class="row">
      <div class="col-12" style="text-align:center" id="hamburger">
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
      </div>
    </div>
    {{!-- Eat Da Burger row! --}}
    <div class="row">
      <div class="col-12"style="text-align:center">
        <h1>Eat-Da-Burger!</h1>
      </div>
    </div>
    {{!-- Entries of toppings w button --}}
    <div class="row">
      <div class="col-6" style="text-align:center">
        {{!-- Added Ingredients --}}
        <ul>
          {{#each cats}} {{#unless sleepy}} {{> cats/ingredients sleep=true}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col-6" style="text-align:center">
        {{!-- Devoured ingredients --}}
        <ul>
          {{#each cats}} {{#if sleepy}} {{> cats/devoured sleep=false}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
    {{!-- submit row --}}
    <div class="row">
      <div class="col-12" style="text-align:center">
        <h2>Add an ingredient</h2>
        <form class="create-form">
          <div class="form-group">
            <input type="text" id="ingredient" name="name" style="width:300px; height:70px;">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
    <br>
  </div>
</div>