<div class="transbox">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <script type="text/x-handlebars-template" id="t">
      <img src="{{../public/assets/images/burger_clipart.jpg}}">
      </script>
    </div>
    <div class="col-2"></div>

  </div>
  <div class="row"></div>
  <div class="row"></div>
  <div class="row"></div>



  <h1>Eat-Da-Burger!</h1>

  <h2>Cats that are not sleepy!</h2>

  <ul>
    {{#each cats}} {{#unless sleepy}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}}
  </ul>

  <h2>Cats that are sleepy!</h2>

  <ul>
    {{#each cats}} {{#if sleepy}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}}
  </ul>

  <h2>Add a Cat</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Cat Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="sleepy">Sleepy?</label>
      <br>
      <input type="radio" name="sleepy" value="1" checked> Sleepy!
      <br>
      <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
  </form>
</div>